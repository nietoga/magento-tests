            <tab>mts</tab>

            <!-- Just reuse a previously created resource -->
            <resource>Magento_Config::web</resource>

            <group id="virtual_logger" translate="label" type="text" sortOrder="1"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Virtual Logger</label>

                <field id="my_time_logger02_cron" translate="label" type="text" sortOrder="1"
                       showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>My Time Logger 02 Cron</label>
